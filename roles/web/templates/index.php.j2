function delete_entry(string $mac): bool {
    $mac = strtolower($mac);
    $fp = fopen(STATE_FILE, 'c+');
    if (!$fp) { return false; }
    if (flock($fp, LOCK_EX)) {
        $raw_data = stream_get_contents($fp);
        $db = json_decode($raw_data, true) ?: [];
        if (isset($db[$mac])) {
            unset($db[$mac]);
        }
        ftruncate($fp, 0);
        rewind($fp);
        fwrite($fp, json_encode($db, JSON_PRETTY_PRINT));
        fflush($fp);
        flock($fp, LOCK_UN);
        fclose($fp);
        return true;
    }
    fclose($fp);
    return false;
}


