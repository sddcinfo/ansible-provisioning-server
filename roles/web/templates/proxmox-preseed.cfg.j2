# Proxmox VE 9.0 Auto-Installer Configuration (answer.toml format)
# This file configures the Proxmox VE auto-installer for unattended installation

[global]
keyboard = "en-us"
country = "jp"
fqdn = "node4.sddc.info"
mailto = "sddc@sddc.info"
timezone = "Asia/Tokyo"
root-password = "{{ root_password | default('proxmox') }}"

[network]
source = "from-dhcp"

[disk-setup]
filesystem = "zfs"
disk_list = ["sda"]
zfs.raid = "raid0"
zfs.compress = "on"
zfs.checksum = "on"
zfs.copies = 1
zfs.hdsize = 32
